package basic;

import java.util.Scanner;

//Array Of Object
public class Student1 {

	//state variables/data members
	int rollno;
	String name;
	Float marks;
	
	//Behaviour-method/memberfunction
	void get() {
		System.out.println("Enter rollno,name & marks");
		Scanner sc = new Scanner (System.in);
		rollno = sc.nextInt();
		name = sc.next();
		marks = sc.nextFloat();
	}
	
	void display() {
		System.out.println("Rollno="+rollno+" "+"name="+name+" "+"marks="+marks);
	}
	public static void main(String[] args) {
	
		Student1[] s1 = new Student1[4];
		
		for(int i = 0; i<4 ;i++) {
			s1[i]=new Student1();
			s1[i].get();
			s1[i].display();
			
		}
	}

}
