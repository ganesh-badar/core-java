package basic;

public class Instancevariable {
	int a = 10;
	int b = 20;
	void add() {
		System.out.println("sum = "+ (a+b));
	}
	
	void add1() {
		int a = 5;
		int b = 7;
		System.out.println("sum = "+ (a+b));
		
	}
	
	void add2() {
		System.out.println("sum= "+ (a+b));
	}

	public static void main(String[] args) {
		

	}

}
 class Variable1{
	public static  void main(String args[]) {
		Instancevariable v1 = new Instancevariable();
		v1.add();
		v1.add1();
		v1.add2();
	}
}
